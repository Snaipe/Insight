#ifndef INSIGHT_INSIGHT_HH
# define INSIGHT_INSIGHT_HH

# include <memory>
# include "types"

namespace Insight {

    const TypeInfo& type_of(std::string name);
    const TypeInfo& type_of(const std::type_info& info);
    void initialize();

    template<typename T>
    const TypeInfo& type_of() {
        return type_of(typeid(T));
    }

};

#endif /* !INSIGHT_INSIGHT_HH */
